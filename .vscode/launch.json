{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run HerpAI VirologyAgent",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/orchestrator/runner.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run Europe Ingestion Pipeline",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/knowledge_base/ingestion/run_pmc_pdf_download.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug HerpAI Unit Tests",
      "type": "python",
      "request": "launch",
      "module": "unittest",
      "args": [
        "discover",
        "-s",
        "tests"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}